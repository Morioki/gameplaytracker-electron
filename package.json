{
	"name": "gameplay-tracker",
	"productName": "Gameplay Tracker",
	"main": "main.js",
	"version": "0.1.0",
	"description": "A simple electron application to track game play sessions",
	"license": "MIT",
	"repository": "https://github.com/Morioki/GameplayTracker",
	"author": {
		"name": "Garrett Braatz",
		"email": "morioki@protonmail.com",
		"url": "https://github.com/Morioki"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "ava",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"bootstrap": "^4.4.1",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"electron-window-state": "^5.0.3",
		"jquery": "^3.4.1",
		"luxon": "^1.21.3",
		"mongoose": "^5.8.3",
		"mongoose-sequence": "^5.2.2",
		"mousetrap": "^1.6.3",
		"popper.js": "^1.16.0"
	},
	"devDependencies": {
		"ava": "^2.4.0",
		"electron": "^7.1.2",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"spectron": "^9.0.0",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"ignores": [
			"test",
			"src/db/models",
			"src/config.js",
			"src/stub-data.js"
		],
		"rules": {
			"camelcase": 0,
			"new-cap": 0
		}
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.company.AppName",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
