{
	"name": "gameplay-tracker",
	"productName": "Gameplay Tracker",
	"main": "main.js",
	"version": "0.5.1",
	"description": "Gameplay Tracker",
	"license": "MIT",
	"repository": "https://github.com/Morioki/GameplayTracker",
	"author": {
		"name": "Garrett Braatz",
		"email": "morioki@protonmail.com",
		"url": "https://github.com/Morioki"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "ava",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --windows",
		"release": "np"
	},
	"dependencies": {
		"bootstrap": "^4.4.1",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"electron-window-state": "^5.0.3",
		"flatpickr": "^4.6.6",
		"jquery": "^3.4.1",
		"lodash": "^4.17.21",
		"luxon": "^1.21.3",
		"mongoose": "^5.8.3",
		"mongoose-sequence": "^5.2.2",
		"mousetrap": "^1.6.3",
		"popper.js": "^1.16.0"
	},
	"devDependencies": {
		"ava": "^2.4.0",
		"electron": "^7.1.2",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"spectron": "^9.0.0",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"ignores": [
			"test",
			"src/db/models",
			"src/config.js",
			"src/stub-data.js"
		],
		"rules": {
			"camelcase": 0,
			"new-cap": 0,
			"max-params": 0
		}
	},
	"np": {
		"private": true,
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.gbcs.GameplayTracker",
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		},
		"win": {
			"target": "portable",
			"icon": "build/icon.ico"
		}
	}
}
